<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.formularios.DatosPersonalesFormularioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="DATOS PERSONALES"
            android:textColor="#507DBC"
            android:textSize="16dp"
            android:textStyle="bold" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="6dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/dp_imagen"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/imagen" />

                        <TextView
                            android:id="@+id/dp_txtNombreArchivo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#EBF3F5"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="{nombre de imagen}" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/dp_btnImagen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:background="@drawable/cv_primary_button"
                        android:text="Cargar Imagen"
                        android:textColor="#04080F"
                        android:elevation="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Nombre: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dp_txtNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#DAE3E5"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Profesión: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dp_txtProfesion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#DAE3E5"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="Fecha de Nacimiento: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dp_txtFechaNacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#DAE3E5"
                        android:inputType="date"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="Lugar de Nacimiento: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dp_txtLugarNacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#DAE3E5"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Estado Civil: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dp_txtEstadoCivil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#DAE3E5"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Domicilio: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dp_txtDomicilio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#DAE3E5"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Teléfono: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dp_txtTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#DAE3E5"
                        android:inputType="phone"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Email: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dp_txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#DAE3E5"
                        android:inputType="textEmailAddress"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Sitio Web: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dp_txtSitioWeb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#DAE3E5"
                        android:inputType="textWebEditText"
                        android:padding="10dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dp_btnGuardar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/cv_primary_button"
            android:text="Guardar"
            android:elevation="6dp"/>

        <Button
            android:id="@+id/dp_btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cv_primary_button"
            android:text="Cancelar"
            android:elevation="6dp"/>

    </LinearLayout>

</RelativeLayout>